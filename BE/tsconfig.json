{
    "compilerOptions": {
        "target": "es2021",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        /* Modules */
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        /* Emit */
        "sourceMap": true,
        "outDir": "./dist",

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "ts-node": {
        "swc": true
    }
}
